<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="@dimen/layout_height"
    android:layout_margin="@dimen/margin_size">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="@dimen/image_size"
        android:layout_height="@dimen/image_size"
        android:contentDescription="@string/bmw_image"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/bmw" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="@dimen/text_width"
        android:layout_height="@dimen/text_one_height"
        android:layout_toEndOf="@id/imageView"
        android:layout_toRightOf="@id/imageView"
        android:fontFamily="monospace"
        android:padding="@dimen/margin_size"
        android:text="@string/bmw_title"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_one"
        android:textStyle="bold"
        tools:targetApi="jelly_bean" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="@dimen/text_width"
        android:layout_height="@dimen/text_two_height"
        android:layout_marginTop="@dimen/text_one_height"
        android:layout_toEndOf="@id/imageView"
        android:layout_toRightOf="@id/imageView"
        android:fontFamily="casual"
        android:padding="@dimen/margin_size"
        android:text="@string/bmwText"
        android:textColor="@color/text_color"
        android:textSize="@dimen/text_size_two"
        tools:targetApi="jelly_bean" />


    <TextView
        android:id="@+id/textView7"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerInParent="true"
        android:padding="@dimen/margin_size"
        android:text="@string/s_mode"
        android:textColor="@color/text_color"
        tools:ignore="RelativeOverlap" />


</RelativeLayout>